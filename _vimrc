set nocompatible
filetype off


set rtp+=~/.vim/bundle/vundle/
call vundle#rc()


" handle bundles
Bundle 'gmarik/vundle'

Bundle 'Valloric/YouCompleteMe'


filetype plugin indent on


" other settings
syntax on

set expandtab
set shiftwidth=4
set softtabstop=4

set ruler
set hlsearch
set showmode
set number

